    <li><a href="<?php echo $this->serverUrl($file['path']) ?>"><?php echo $file['locale']?> - <?php echo $file['filename'] ?></a></li>
    <?php endforeach; ?>
</ul>

<p><a href="<?php echo $this->url('admin') ?>">
    <span class="glyphicon glyphicon-chevron-left"></span>
    Back to admin
</a></p>